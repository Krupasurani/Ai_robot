ETCD_URL=http://localhost:2379

SECRET_KEY=your_secret

# Local/dev toggles
DISABLE_ETCD=true
CONFIG_STORE=ENVIRONMENT
ENABLE_KAFKA=false
STRICT_STARTUP=false
# For ETCD strictness in all encrypted stores
STRICT_ETCD=false
ENABLE_TOOL_SYNC=false

# HunyuanOCR Configuration Template
# Copy relevant variables to your .env file to enable HunyuanOCR

# Enable HunyuanOCR for document processing
# Set to 'true' to enable HunyuanOCR VLM for OCR on all document types
HUNYUAN_OCR_ENABLED=true

# HunyuanOCR model repository ID from Hugging Face
# Default: tencent/HunyuanOCR (recommended)
HUNYUAN_OCR_REPO_ID=tencent/HunyuanOCR

# Device to run HunyuanOCR on
# Options: auto (recommended), cuda (NVIDIA GPU), mps (Apple Metal), cpu
HUNYUAN_OCR_DEVICE=auto

# Custom prompt for HunyuanOCR (optional)
# Leave empty to use default: "Detect and recognize text in the image, and output the text coordinates in a formatted manner."
# 
# Examples:
# - Document parsing: "Extract all information from the document image and represent it in markdown format."
# - Information extraction: "Extract key-value pairs from the image and return as JSON."
# - Subtitle extraction: "Extract all subtitles or captions from the image."
# - Translation: "Extract all text from the image and translate it to English."
#
# HUNYUAN_OCR_PROMPT="Detect and recognize text in the image, and output the text coordinates in a formatted manner."

