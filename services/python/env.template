PORT=3000
NODE_ENV=development
LOG_LEVEL=debug
ALLOWED_ORIGINS=http://localhost:3001

SECRET_KEY=my-secret

QUERY_BACKEND=http://localhost:8000
CONNECTOR_BACKEND=http://localhost:8080
CONNECTOR_PUBLIC_BACKEND=
INDEXING_BACKEND=http://localhost:8091

ETCD_URL=http://localhost:2379
ETCD_HOST=localhost

# Local/dev toggles
# Disable ETCD and use environment store
DISABLE_ETCD=true
# Alternatively choose store type explicitly: ETCD3 | ENVIRONMENT | IN_MEMORY
CONFIG_STORE=ENVIRONMENT
# Skip Kafka consumers locally
ENABLE_KAFKA=false
# Continue startup even if Arango is unavailable
STRICT_STARTUP=false
# Disable tool registry sync unless explicitly enabled
ENABLE_TOOL_SYNC=false
STRICT_ETCD=false

# ============================================
# Chunking Strategy Configuration (RAG)
# ============================================
# Enable hierarchical (markdown-aware) chunking (default: true)
ENABLE_HIERARCHICAL_CHUNKING=true
# Enable Parent-Child (Thero-style) chunking for Small-to-Big retrieval (default: false)
# When enabled, creates small children for search and large parents for LLM context
ENABLE_PARENT_CHILD_CHUNKING=false
# Parent chunk size (Generation Unit) - large for LLM context (default: 4000)
PARENT_CHUNK_SIZE=4000
# Child chunk size (Search Unit) - small for precise vector search (default: 400)
CHILD_CHUNK_SIZE=400
# Overlap between consecutive child chunks (default: 50)
CHILD_CHUNK_OVERLAP=50

ARANGO_URL=http://localhost:8529
ARANGO_DB_NAME=es
ARANGO_USERNAME=root
ARANGO_PASSWORD=your_arango_password

KAFKA_BROKERS=localhost:9092

